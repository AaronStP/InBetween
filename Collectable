using System.Collections;
using System.Collections.Generic;
using UnityEngine;

public class Collectable : MonoBehaviour
{
    //Fields and Variables
    enum ItemType { Coin, Health, Ammmo, InventoryItem} //Drop down menu
    [SerializeField] ItemType itemType;
    [SerializeField] string inventoryStringName;
    [SerializeField] Sprite inventorySprite;


    Player playerRef;

    // Start is called before the first frame update
    void Start()
    {
        //Instantiate
        playerRef = GameObject.Find("Player").GetComponent<Player>();
    }

    //Increase the value after collision if Player
    void OnTriggerEnter2D(Collider2D collision)
    {
        if (collision.gameObject.name == "Player")
        {
            //Check what the item is (SWITCH)
            switch (itemType)
            {
                case ItemType.Coin:
                    playerRef.coinsCollected++;
                    break;
                case ItemType.Health:
                    if (playerRef.health < 100)
                        playerRef.health++;
                    break;
                case ItemType.InventoryItem:
                    playerRef.AddInventoryItem(inventoryStringName, inventorySprite);
                    break;
                case ItemType.Ammmo:
                    break;
                default:
                    break;
            }
            playerRef.UpdateUIElements();
            Destroy(gameObject);
        }
    }
}
